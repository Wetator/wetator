<?xml version="1.0" encoding="UTF-8"?>
<project name="Wetator patternset" basedir=".">

    <patternset id="runtime-libs">
        <include name="*.jar" />

        <exclude name="ant-*.jar" />
        <exclude name="hsqldb-*.jar" />

        <exclude name="junit-*.jar" />
        <exclude name="hamcrest-*.jar" />
        <exclude name="mockito-*.jar" />
        <exclude name="objenesis-*.jar" />

        <exclude name="jetty-c*.jar" />
        <exclude name="jetty-h*.jar" />
        <exclude name="jetty-i*.jar" />
        <exclude name="jetty-s*.jar" />
        <include name="jetty-util-*.jar" />
        <exclude name="jetty-w*.jar" />
        <exclude name="jetty-x*.jar" />

        <exclude name="javax.servlet-*.jar" />
        <exclude name="slf4j-*.jar" />
    </patternset>

    <patternset id="libPattern">
        <include name="**/*.jar" />
    </patternset>

    <patternset id="resourcePattern">
        <exclude name="**/*.java" />
    </patternset>

    <patternset id="junitPattern">
        <include name="**/*Test.class" />
        <exclude name="**/AllTests.class" />
        <exclude name="**/Abstract*.class" />
        <exclude name="**/Manual*.class" />
        <exclude name="**/*IBrowserTest.class" />
    </patternset>

    <patternset id="checkstylePattern">
        <include name="**/*.java" />
    </patternset>

    <patternset id="pmdPattern">
        <include name="**/*.java" />
    </patternset>
</project>