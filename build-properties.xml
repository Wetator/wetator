<?xml version="1.0" encoding="UTF-8"?>
<build-properties>

  <skip>
    <!--resolve>true</resolve-->
    <!--tests>true</tests-->
  </skip>

  <application>
    <name>Wetator</name>
    <version>1_11_0_beta3</version>
    <pubversion>1.11.0-SNAPSHOT</pubversion>
    <jar-basename>wetator</jar-basename>
    <vendor>wetator.org</vendor>
  </application>

  <dir>
    <src>src</src>
    <test>test</test>
    <test-src>${dir.test}/java</test-src>
    <samples>samples</samples>
    <templates>templates</templates>
    <lib>lib</lib>
    <lib-src>lib_src</lib-src>
    <ant-lib>ant_lib</ant-lib>
    <build>build</build>
    <xsl>xsl</xsl>
    <webpages>webpages</webpages>
    <deploy>deploy</deploy>
  </dir>

  <ivy>
    <retrieve>
        <pattern>/[artifact]-[revision](-[classifier]).[ext]</pattern>
    </retrieve>
  </ivy>

  <javac>
    <source>1.8</source>
    <target>1.8</target>
  </javac>

  <!-- display number (used for xvfb in CI only) -->
  <display>1</display>

</build-properties>
