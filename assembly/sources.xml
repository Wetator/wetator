<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>source-zip</id>
    <includeBaseDirectory>false</includeBaseDirectory>

    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/ant_lib</directory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/assembly</directory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src</directory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/test</directory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/samples</directory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/scripts</directory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/xsd</directory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/xsl</directory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}</directory>
            <includes>
                <include>*.*</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>