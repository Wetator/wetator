<?xml version='1.0' encoding='UTF-8'?>

<testcase
    xmlns='http://www.wetator.org/xsd/defaultCommandSet'
    xmlns:tst='http://www.wetator.org/xsd/testCommandSet'
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:schemaLocation='http://www.wetator.org/xsd/defaultCommandSet xsd/defaultCommandSet.xsd http://www.wetator.org/xsd/testCommandSet xsd/testCommandSet.xsd'>
    <step command='Open_Url'>incubator/debug_click_on.html</step>
    <step command='Assert_Title'>Wetator / Debug Click On</step>
    <step command='Comment'>anchor with text</step>
    <step command='Debug Click On'>Anchor with text</step>
    <step command='Assert_Content'>GET Parameters Key Value clickOnAnchor a_text POST</step>
    <step command='Comment'></step>
    <step command='Comment'></step>
    <step command='Open_Url'>incubator/debug_click_on.html</step>
    <step command='Assert_Title'>Wetator / Debug Click On</step>
    <step command='Comment'>invisible anchor</step>
    <step command='Debug Click On'>invisible Anchor with text</step>
    <step command='Assert_Content'>GET Parameters Key Value clickOnAnchor a_invisible_text POST</step>
    <step command='Comment'></step>
    <step command='Comment'></step>
    <step command='Open_Url'>incubator/debug_click_on.html</step>
    <step command='Assert_Title'>Wetator / Debug Click On</step>
    <step command='Comment'>invisible anchor with span</step>
    <step command='Debug Click On'>invisible Anchor with text and span</step>
    <step command='Assert_Content'>GET Parameters Key Value clickOnAnchor a_invisible_text_span POST</step>
    <step command='Comment'></step>
    <step command='Comment'></step>
    <step command='Open_Url'>incubator/debug_click_on.html</step>
    <step command='Assert_Title'>Wetator / Debug Click On</step>
    <step command='Comment'>invisible anchor pattern</step>
    <step command='Debug Click On'>invisible * with text</step>
    <step command='Assert_Content'>GET Parameters Key Value clickOnAnchor a_invisible_text POST</step>
    <step command='Comment'></step>
    <step command='Comment'></step>
    <step command='Open_Url'>incubator/debug_click_on.html</step>
    <step command='Assert_Title'>Wetator / Debug Click On</step>
    <step command='Comment'>invisible anchor with special chars</step>
    <step command='Debug Click On'>*Raumverwaltung</step>
    <step command='Assert_Content'>GET Parameters Key Value clickOnAnchor a_invisible_special POST</step>
    <step command='Comment'></step>
    <step command='Comment'></step>
    <step command='Open_Url'>incubator/debug_click_on.html</step>
    <step command='Assert_Title'>Wetator / Debug Click On</step>
    <step command='Comment'>missing anchor</step>
    <tst:step command='Assert_Fail'>Debug Click On, No clickable HTML element found for 'unknown Anchor'.<tst:optionalParameter>unknown Anchor</tst:optionalParameter></tst:step>
</testcase>
