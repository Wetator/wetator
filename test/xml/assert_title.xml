<?xml version="1.0" encoding="UTF-8"?>

<testcase
    xmlns="http://www.wetator.org/xsd/defaultCommandSet"
    xmlns:tst="http://www.wetator.org/xsd/testCommandSet"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.wetator.org/xsd/defaultCommandSet xsd/defaultCommandSet.xsd
        http://www.wetator.org/xsd/testCommandSet xsd/testCommandSet.xsd">
    <step command="Open_Url">assert_content.html</step>
    <step command="Assert_Title">Wetator / Assert Content</step>
    <step command="Assert_Title">Wetator / Assert Cont*</step>
    <step command="Comment"></step>
    <step command="Open_Url">assert_selected.html</step>
    <step command="Assert_Title">Wetator / Assert Selected</step>
    <step command="Assert_Title">Wetator / Assert Sel*</step>
    <step command="Comment"></step>
    <step command="Open_Url">assert_content.html</step>
    <step command="Comment">test for warning about unused parameter</step>
    <tst:step command="Assert_Fail">Assert Title, The command 'Assert Title' expects an integer parameter value 'unused' in column 2.<tst:optionalParameter>Wetator / Assert Content</tst:optionalParameter><tst:optionalParameter2>unused</tst:optionalParameter2></tst:step>
    <step command="Comment">test for parameter support</step>
    <step command="Assert_Title">${wet} / Assert Content</step>
    <step command="Comment">test for secret parts</step>
    <step command="Assert_Title">${wet-secret} / Assert Content</step>
    <step command="Comment">more parts</step>
    <step command="Assert_Title">Wetator, Assert, Content</step>
    <step command="Assert_Title">Wetator, Content</step>
    <step command="Assert_Title">W*tator, Co*t</step>
    <step command="Comment">test errors</step>
    <tst:step command="Assert_Fail">Assert Title, Expected content(s) {not found} or [in wrong order]: 'Wetator\, Content\, [Assert]' (content: 'Wetator / Assert Content').<tst:optionalParameter>Wetator, Content, Assert</tst:optionalParameter></tst:step>
    <tst:step command="Assert_Fail">Assert Title, Expected content(s) {not found} or [in wrong order]: '{wrong*}' (content: 'Wetator / Assert Content').<tst:optionalParameter>wrong*</tst:optionalParameter></tst:step>
    <step command="Comment">redirect without timeout</step>
    <step command="Open_Url">redirect_js.php?target=assert_content.html</step>
    <step command="Assert_Title">Wetator / Assert Content</step>
    <step command="Comment">redirect with simple timeout</step>
    <step command="Open_Url">redirect_js.php?target=assert_content.html&amp;wait=3000</step>
    <step command="Assert_Title">Wetator / Assert Content<optionalParameter>4.0</optionalParameter></step>
    <step command="Comment">two redirects</step>
    <step command="Open_Url">redirect_js.php?target=redirect_js.php&amp;wait=3000</step>
    <step command="Assert_Title">Wetator / Smarter web application testing<optionalParameter>5.0</optionalParameter></step>
</testcase>