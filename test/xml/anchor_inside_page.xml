<?xml version="1.0" encoding="UTF-8"?>

<testcase
    xmlns="http://www.wetator.org/xsd/defaultCommandSet"
    xmlns:tst="http://www.wetator.org/xsd/testCommandSet"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.wetator.org/xsd/defaultCommandSet xsd/defaultCommandSet.xsd
        http://www.wetator.org/xsd/testCommandSet xsd/testCommandSet.xsd">
    <step command="Open_Url">anchor_inside_page.html#chapter1</step>
    <step command="Assert_Title">Wetator / Anchor Inside Page</step>
    <step command="Comment">unknown anchor</step>
    <tst:step command="Assert_Fail">Open Url, No id/anchor found for ref 'unknownAnchor'.<tst:optionalParameter>anchor_inside_page.html#unknownAnchor</tst:optionalParameter></tst:step>
    <step command="Comment">duplicate anchor</step>
    <step command="Open_Url">anchor_inside_page.html#duplicteAnchor</step>
    <step command="Comment">click on anchor</step>
    <step command="Open_Url">anchor_inside_page.html</step>
    <step command="Click_On">jump to 'Chapter 1'</step>
    <tst:step command="Assert_Fail">Click On, No id/anchor found for ref 'chapter3'.<tst:optionalParameter>jump to non existing anchor</tst:optionalParameter></tst:step>
    <step command="Click_On">jump to duplicate anchor</step>
    <step command="Comment">now the javascript game</step>
    <step command="Click_On">open popup and jump to 'Chapter 1'</step>
    <step command="Close_Window"></step>
    <tst:step command="Assert_Fail">Click On, No id/anchor found for ref 'chapter3'.<tst:optionalParameter>open popup and jump to non existing anchor</tst:optionalParameter></tst:step>
    <step command="Close_Window"></step>
    <step command="Click_On">open popup and jump to duplicate anchor</step>
    <step command="Close_Window"></step>
</testcase>